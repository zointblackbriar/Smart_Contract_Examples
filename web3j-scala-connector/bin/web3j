#!/usr/bin/env bash

# Sample usage:
# bin/web3j -j
#
# -j option forces rebuild of jar

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."
cd "$DIR" || exit 1

# Scan build.sbt for program name, Scala version and program version
function findValue {
  grep "$1 :=" build.sbt | cut -d' ' -f 3 | tr -d \"
}

SCALA_VERSION() {
  V=$( findValue scalaVersion )
   case $V in
    2.10.*) echo 2.10 ;;
    2.11.*) echo 2.11 ;;
    2.12.*) echo 2.12 ;;
    2.13.*) echo 2.13 ;;
     3.0.*)  echo 3.0 ;;
     3.1.*)  echo 3.1 ;;
         *) echo UNKNOWN ;;
  esac
}

NAME="$( findValue name )"
VERSION="$( findValue version )"
JAR=target/scala-$(SCALA_VERSION)/$NAME-assembly-$VERSION.jar

if [ "$1" == -j ] || [ ! -f "${JAR}" ]; then
  echo "Building $JAR"
  sbt assembly

  if [ "$1" == -j ]; then shift; fi
fi

java -cp target/scala-2.13/web3j-scala-assembly-4.5.17.jar org.web3j.console.Runner "$@"
